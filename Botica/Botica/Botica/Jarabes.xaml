                           Grid.Column="1"
                           Aspect="AspectFit"
                           WidthRequest="80"
                           HeightRequest="80"></Image>
                    <Image Source="jarabe5.jprg"
                           Grid.Row="5"
                           Grid.Column="1"
                           Aspect="AspectFit"
                           WidthRequest="80"
                           HeightRequest="80"></Image>
                    <Label Text="5mg"
                           TextColor="Black"
