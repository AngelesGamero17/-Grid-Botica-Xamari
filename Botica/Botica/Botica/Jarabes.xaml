                           Grid.Row="1"
                           Grid.Column="0"
                           HorizontalOptions="Center"></Label>
                    <Label Text="Flutox"
                           TextColor="Black"
                           Grid.Row="2"
                           Grid.Column="0"
                           HorizontalOptions="Center"></Label>
                    <Label Text="Varlon"
                           TextColor="Black"
                           Grid.Row="3"
                           Grid.Column="0"
                           HorizontalOptions="Center"></Label>
                    <Label Text="Bisolvon"
                           TextColor="Black"
                           Grid.Row="4"
                           Grid.Column="0"
                           HorizontalOptions="Center"></Label>
                    <Label Text="Tautoss"
                           TextColor="Black"
                           Grid.Row="5"
                           Grid.Column="0"
                           HorizontalOptions="Center"></Label>
                    <Image Source="jarabe1.jpeg"
                           Grid.Row="1"
                           Grid.Column="1"
                           Aspect="AspectFit"
                           WidthRequest="80"
                           HeightRequest="80"></Image>
                    <Image Source="jarabe2.jpeg"
